generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// file: prisma/schema.prisma

model User {
  id    String  @id
  email String  @unique
  name  String?
  role  Role    @default(CAREWORKER)
}

enum Role {
  MANAGER
  CAREWORKER
}