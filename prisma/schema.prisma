generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid()) // Using CUIDs is a modern best practice for IDs
  email String  @unique
  name  String?
  role  Role    @default(CAREWORKER)
  // Future relation to shifts can be added here
}

enum Role {
  MANAGER
  CAREWORKER
}

